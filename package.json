{
  "name": "api",
  "version": "1.0.0",
  "description": "Social app for developers",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "setup": "npm install && cd client && npm install",
    "server": "node server.js",
    "nodemon": "nodemon server.js",
    "client": "cd client && npm start",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev": "concurrently --kill-others-on-fail \"npm run nodemon\" \"npm run client\""
  },
  "author": "H R Shuvo",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.2.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.6",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9"
  }
}
